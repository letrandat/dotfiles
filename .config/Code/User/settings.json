    {
      "key": "k",
      "name": "Tasks...",
      "type": "bindings",
      "bindings": [
        {
          "key": ".",
          "name": "Rerun Last Task",
          "type": "command",
          "command": "workbench.action.tasks.reRunTask"
        },
        {
          "key": "R",
          "name": "Restart Task",
          "type": "command",
          "command": "workbench.action.tasks.restartTask"
        },
        {
          "key": "b",
          "name": "Build Task",
